/* Portfolio
===================*/

.portfolio{
    padding 3rem 0 

    &__content{
        background-color $light 
        margin 4rem 0 
    }
    &__item{
        flex-basis 28%
        margin-bottom -2rem
        display flex
        flex-direction column
        @media(max-width $tablet){
            flex-basis 90% 
            text-align center 
            margin-bottom 2rem
            align-items center
        }  
    }
    &__h3{
        color $dark
        font-size rem(17)
        font-family $text
        font-weight 500 
        text-transform uppercase  
    }  
    &__text{
        color $gray
        font-size rem(15)
        font-family $text
        font-weight 400   
        line-height 1.7
        margin 1rem 0
    }  
    &__img{
        margin-left -1.5rem 
        @media(max-width $tablet){
            margin 0 auto
        }  
        img{
            display block
        }  
    }
   
}
   


.portfolio-content{
    padding-top 1rem
    display flex
    justify-content space-between
    flex-wrap wrap
    @media(max-width $tablet){
        justify-content center
    } 
} 

.portfolio-nav{
    margin 2rem 0
    display flex
    flex-wrap wrap
    @media(max-width $mobile){
        justify-content center
    } 
    &__link{
        color $dark
        font-size rem(17)
        font-family $text
        font-weight 500 
        text-transform uppercase
        transition color .3s linear 
        margin-bottom 1rem
        &:hover{
            color $accent  
            &::after{
                color $dark    
            }  
        }
        &:last-child::after{
            display none   
        }
        &::after{
            content '/'
            font-size rem(17)
            font-family $text 
            font-weight 500 
            margin 0 .5em   
        }     
    }    
}


