/* Burger
===================*/
.burger{
    display: none;
    flex-direction: column;
    justify-content: center;
    width: 2.5rem;
    height: 1.5rem;
    border:none;
    cursor: pointer;
    position: relative;
    z-index: 3001;
    margin-top 1.5rem
    margin-left 1rem
    &:focus{outline: none;}
    @media (max-width: $tablet){
        display: flex;
    }
    &__open .burger__line{
        background-color: transparent;
        &::before{
            transform: rotate(45deg) ;
        }
        &::after{
            transform: rotate(-45deg) ;
        }
    }
    &--helper{
        position absolute
        top 0
        left 0    
    }
    &__line{
        height: 2px;
        width: 100%;
        background-color: $accent;
        transition: background-color .3s linear;
        &::before{
            content: '';
            display: block;
            width: 100%;
            height: 2px;
            position: absolute;
            transform: translateY(.73rem);
            background-color: $accent;
            transition: transform .3s linear;
        }
        &::after{
            content: '';
            display: block;
            width: 100%;
            height: 2px;
            position: absolute;
            transform: translateY(-.73rem);
            background-color: $accent;
            transition: transform .3s linear;
        }
    }
}


