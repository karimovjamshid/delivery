/* Header
===================*/
.header{
    position absolute
    top 0
    left 0
    right 0
    z-index 1000
    &-container{
        @media (max-width: $tablet){
            width 100vw 
            background-color $dark
            height 100vh
            padding-top 3rem
            box-sizing border-box
            margin-left -100vw
            transition margin-left .5s linear
            position absolute
            top 0
            right 0
            left 0
        }    
    }
    &__top{
        
        display: flex
        justify-content space-between  
        align-items center
        border-bottom 1px solid $white
        padding rem(17) 0
        @media (max-width: $tablet){
            padding-top 1rem
        }
        &--dark{
            border-color $dark    
        }
    }
    &__bottom{
        display flex
        justify-content space-between
        flex-wrap wrap
        padding-top rem(17)
        @media (max-width: $tablet){
            justify-content center 
        }
    }
    &__nav{
        width 80%
        display flex
        justify-content space-between
        @media (max-width: $tablet){
            flex-direction column 
            align-items center
            width 100%  
            padding-top 1rem
        }
        @media (max-width: $mobile-xs){
            padding-top 0    
        }
    }
    &__link{
        font-size 1rem
        color $white  
        text-transform uppercase
        transition color .3s linear
        font-family $text
        &--dark{
            color $dark  
            @media (max-width: $tablet){
                color $white    
            }  
        }
        @media (max-width: $tablet){
            margin-bottom 2rem 
        }
        &:hover{
            color: $accent
        }
    }
    &__search{
        width 16% 
        display flex
        justify-content flex-end 
        align-items center  
        @media (max-width: $tablet){
            width 100%  
            justify-content center
            margin-bottom 2rem
        }
        img{
            cursor pointer
            margin-left 0.5rem
        }
    }
    &__input{
        background-color transparent
        border 1px solid $gray
        border-radius .3em  
        padding .5em 1em  
        width 0
        opacity 0
        transition width .3s linear
        &:focus{
            outline: 1px solid $white    
        }
        &::placeholder{
            color $white    
        }
        &--dark::placeholder{
            color $dark 
            @media (max-width: $tablet){
                color $white    
            }      
        }
    }
    
}
.header-container--open{
