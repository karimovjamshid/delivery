    }
    &__input{
        background-color $light
        border none
        max-width 350px
        width 100%
        font-size 1rem
        font-family $text
        padding .7em 1em
        &:focus{
            outline none    
        }
    }
    &__textarea{
        background-color $light
        border none
        max-width 550px
        max-height 300px
        width 100%
        height 100%
        font-size 1rem
        font-family $text
        padding .7em 1em
        display block
