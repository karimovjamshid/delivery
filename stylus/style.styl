/* Slick slider
===================*/
.slick-slide{
    position relative
    &:focus{
        outline none   
    }  
}
.slick-prev, .slick-next{
    border-radius 50%
    background-color $white
    width 40px
    height 40px  
    color transparent 
    border none
    font-size 0 
    cursor pointer
    &:focus{
        outline none   
    } 
    @media (max-width: $tablet){
        display none !important 
    }  
}

.slick-prev{
    position absolute
    top 50%
    left 5% 
    z-index 100
    &::before{
        content '\f053'
        font-family: 'Font Awesome\ 5 Free';
        font-weight: 900;
        font-size 2rem    
        color $dark
        display flex
        justify-content center
        padding-top 0.4rem
    } 
}
.slick-next{
    position absolute
    top 50%
    right 5% 
    &::before{
        content '\f054'
        font-family: 'Font Awesome\ 5 Free';
        font-weight: 900;
        font-size 2rem    
        color $dark
        display flex
        justify-content center
        padding-top 0.4rem
    }   
}
 li.slick-active{
    button{
        background-color $accent
    }
   
}
.slick-dots{
    position absolute
    display flex
    justify-content center
    top 90%
    left auto
    right auto 
    @media (max-width: $mobile){
        top 85%
    } 
    li{
        margin-left 0.5rem
        @media (max-width: $mobile){
            margin-left 1.5rem 
        }
