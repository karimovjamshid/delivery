<!-- ======== Header ======== -->
        header(class="header" id="header")
        .burger.burger--helper
            span.burger__line
        .header-container.container
            div(class="header__top header__top--dark")
                div(class="logo logo--dark") Deliver
                div(class="header__social header-social")
                    div(class="header-social__item")
                        img(src="img/home/twitter.png" height="17" class="header-social__img")
                    div(class="header-social__item")
                        img(src="img/home/facebook.png" height="17" class="header-social__img")
                    div(class="header-social__item")
                        img(src="img/home/rss.png" height="17" class="header-social__img")
            div(class="header__bottom")
                div(class="header__nav")
                    a(href="home.html" target="_blank" class="header__link header__link--dark") home
                    a(href="portfolio.html" target="_blank" class="header__link header__link--dark") portfolio
                    a(href="about.html" target="_blank" class="header__link header__link--dark") about
                    a(href="services.html" target="_blank" class="header__link header__link--dark") services
                    a(href="archive.html" target="_blank" class="header__link header__link--dark") archive
                    a(href="blog.html" target="_blank" class="header__link header__link--dark") blog
                    a(href="#" target="_blank" class="header__link header__link--dark") other pages
                    a(href="contact.html" target="_blank" class="header__link header__link--dark") contact us
                div(class="header__search")
                    input(type="search" placeholder="Search..." class="header__input header__input--dark")
                    img(class="search-icon" src="img/about/magnifying-glass--dark.png" alt="loupe" height="20")